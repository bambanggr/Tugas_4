<h1>Listing pictures</h1>
<br>
<hr>
<% @pictures.each do |picture| %>
<div class='col-md-4'>
	<div class='thumbnail'>
		<%= image_tag picture.pic_name_url.to_s %>
			<div class="caption">
				<h3>
				<%= picture.title %>
				</h3>
				<p>
				<%= link_to 'Show', picture, class:'btn btn-primary' %>				
				</p>
			</div>
	</div>
</div>
<% end %>

<br>
<%= link_to 'New Picture', new_picture_path %>
